{{#with comment}}
    {{#if hasVisibleComponent}}
        <div class="tsd-comment tsd-typography">
            {{#if shortText_i18n}}
                <div class="lead tsd_i18n">
                    {{#markdown}}{{{shortText_i18n}}}{{/markdown}}
                </div>
            {{/if}}
            {{#if shortText}}
                <div class="lead tsd_en">
                    {{#markdown}}{{{shortText}}}{{/markdown}}
                </div>
            {{/if}}
            
            {{#unless text_line_i18n}}
                {{#if text_i18n}}
                    <div class="tsd_i18n">
                        {{#markdown}}{{{text_i18n}}}{{/markdown}}
                    </div>
                {{/if}}
                {{#if text}}
                    <div class="tsd_en">
                        {{#markdown}}{{{text}}}{{/markdown}}
                    </div>
                {{/if}}
            {{/unless}}

            {{#each text_line_i18n}}
                {{#if this}}
                    <div class="tsd_i18n">
                        {{#markdown}}{{{this}}}{{/markdown}}
                    </div>
                {{/if}}
                <div class="tsd_en">
                    {{#markdown}}{{{lookup ../text_line_en @index}}}{{/markdown}}
                </div>
            {{/each}}
            {{#if tags}}
                <dl class="tsd-comment-tags">
                    {{#each tags}}
                        <dt>{{tagName}}</dt>
                        <dd>{{#markdown}}{{{text}}}{{/markdown}}</dd>
                    {{/each}}
                </dl>
            {{/if}}
        </div>
    {{/if}}
{{/with}}